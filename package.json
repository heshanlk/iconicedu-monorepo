{
  "name": "iconicedu-monorepo",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "turbo run dev --filter=web --filter=@iconicedu/ui-web",
    "dev:web": "turbo run dev --filter=web --filter=@iconicedu/ui-web",
    "dev:mobile": "turbo run dev --filter=mobile",
