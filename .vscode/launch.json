{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Next: Server + Client",
      "configurations": ["Next: Server", "Next: Client"]
    }
  ],
  "configurations": [
    {
      "name": "Next: Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Next: Client",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    }
  ]
}
