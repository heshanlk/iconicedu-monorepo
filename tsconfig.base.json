{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["DOM", "ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "incremental": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@iconicedu/web/*": ["apps/web/*"],
      "@iconicedu/web": ["apps/web"],
      "@iconicedu/api/*": ["apps/api/src/*"],
      "@iconicedu/api": ["apps/api/src"],
      "@iconicedu/mobile/*": ["apps/mobile/*"],
      "@iconicedu/mobile": ["apps/mobile"],
      "@iconicedu/ui-web/*": ["packages/ui-web/src/*"],
      "@iconicedu/ui-web": ["packages/ui-web/src"],
      "@iconicedu/ui-native/*": ["packages/ui-native/src/*"],
      "@iconicedu/shared-types/*": ["packages/shared-types/src/*"],
      "@iconicedu/shared-types": ["packages/shared-types/src"],
      "@iconicedu/utils/*": ["packages/utils/src/*"]
    }
  }
}
